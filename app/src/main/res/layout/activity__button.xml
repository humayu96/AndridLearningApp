<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"

    tools:context=".Android_Program.Activity_Button">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"

            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/buttonxml"
                android:layout_width="wrap_content"
                android:layout_height="230dp"

                android:src="@drawable/button_xml" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/holo_orange_dark"
                android:text="In Button you cannot write :Hint: becuase on button we write text so it take :Text: instrad of :Hint:.If you write hint it will not show on buttton"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/buttoncode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:src="@drawable/button_code" />

            <ImageView
                android:id="@+id/buttonresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"

                android:src="@drawable/button_result" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>