<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Android_Program.Activity_GridView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridxml"
            android:src="@drawable/gridxml"
            android:layout_gravity="center"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridmain"
            android:src="@drawable/gridview"
            android:layout_gravity="center"

            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:text="After Initializing ,make a Separate Class of ImageAdopter 2 after the on create method.You can Name anything to your adopter class.Im my case i give ImageAdopter 2"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/gridadopter"
            android:layout_marginTop="5dp"

            android:src="@drawable/gridadopter"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/gridresult"
            android:src="@drawable/gridresult"
            />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>